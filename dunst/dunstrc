# Dunst configuration tuned for the refreshed colour scheme
# This configuration is based on the example from the ArchWiki【519288873621390†L56-L81】.  Colours are
# placeholders and will be updated dynamically by update-colors.sh via pkill -SIGUSR1.
[global]
monitor = 0
follow = mouse
geometry = "350x0-20+40"
margin = 10
padding = 8
frame_width = 2
separator_height = 2
font = JetBrainsMono Nerd Font 10
line_height = 3
show_age_threshold = 120
format = " %s \n%b"
alignment = left
timeout = 8
markup = full
icon_position = left
stack_duplicates = true
sort = true

# These colours will be overwritten by update-colors.sh sending SIGUSR1
background = "#1e1e2e"
foreground = "#cdd6f4"
frame_color = "#45475a"
separator_color = frame

[urgency_low]
background = "#1e1e2e"
foreground = "#cdd6f4"
frame_color = "#313244"
timeout = 5

[urgency_normal]
background = "#1e1e2e"
foreground = "#cdd6f4"
frame_color = "#45475a"
timeout = 8

[urgency_critical]
background = "#1e1e2e"
foreground = "#f38ba8"
frame_color = "#f38ba8"
timeout = 0
