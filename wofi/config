term = kitty
columns = 2
hide_search = false
insensitive = true
allow_markup = true

# Colour scheme generated by Pywal/Matugen; update-colors.sh will write this file
colors = ~/.cache/wal/colors-wofi

# CSS stylesheet for frosted glass effect
